#!/bin/bash

options="Power off
Reboot
Suspend
Hibernate
Logout
Lock session"

if [ $# -eq 0 ]; then
	echo "$options"

elif [ "$1" = "show" ]; then
	rofi -theme openbox-menu -show "Select action" -modi "Select action":"$(readlink -f "$0")"

else
	case "$@" in
	"Logout")
		openbox --exit
		;;
	"Lock session")
		physlock
		;;
	"Power off")
		systemctl poweroff
		;;
	"Reboot")
		systemctl reboot
		;;
	"Suspend") 
		systemctl suspend
		;;
	"Hibernate")
		systemctl hibernate
		;;
	esac
fi
